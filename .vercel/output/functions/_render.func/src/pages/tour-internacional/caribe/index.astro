---
import SliderNav from "../../../components/Main/SliderNav.astro"
import Layout from "../../../layouts/Layout.astro"
import TitleTours from "../../../components/Tours/TitleTours.astro"
import MainTours from "../../../components/Tours/MainTours.astro"
import { CARIBE_TOURS } from "../../../components/Tours/datainfo.js"

const IMG_SLIDER = {
    img1 : '/img/International/Caribe/CaribeSlider1.webp',
    img2 : '/img/International/Caribe/CaribeSlider2.webp',
    img3 : '/img/International/Caribe/CaribeSlider3.webp',
    img4 : '/img/International/Caribe/CaribeSlider4.webp',
}
---
<Layout title="Tours Caribe" description="Tours Caribe">
    <SliderNav image1={IMG_SLIDER.img1} image2={IMG_SLIDER.img2} image3={IMG_SLIDER.img3} image4={IMG_SLIDER.img4} h="md:h-[50vh]"/>
    <TitleTours name="Tours Caribe"/>
    <section class="flex min-h-[50vh] justify-center items-center px-4">
      <div class="grid grid-cols-1 gap-5 md:grid-cols-2 mb-8 justify-center items-center max-w-[920px]">
            {
              CARIBE_TOURS.map ((tour) =>(
                  <MainTours {...tour} />
              ))
            }  
      </div>
    </section>
</Layout>