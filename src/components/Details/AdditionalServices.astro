---
import AdditionalServicesListStyle from './AdditionalServicesListStyle.astro'
interface Props{
  additionals: string[]
}
const { additionals } = Astro.props
---

<section class="flex justify-start items-start flex-col mt-5 gap-5">
    <h2 class="relative text-2xl md:text-3xl font-semibold">
        Servicios Adicionales
        <span class="block bg-[#7f3812] w-full h-1 pt-2"></span>
    </h2> 
    <div class="flex flex-col gap-2 pl-4">
      {
        additionals.map((additional) => (
          <ul class="space-y-3">
            <AdditionalServicesListStyle additional={additional}/>
          </ul>
        ))
      }        
    </div>
</section>