---
import DetailsTravelListStyle from './DetailsTravelListStyle.astro'
interface Props {
  details : string[]
}

const { details } = Astro.props
---

<section class="flex justify-start items-start flex-col mt-5 gap-5">
    <h2 class="relative text-2xl md:text-3xl font-semibold">
        Detalles del Viaje
        <span class="block bg-[#7f3812] w-full h-1 pt-2"></span>
    </h2> 
    <ul class="flex flex-col gap-2 pl-4">
      {
        details.map(detail => (
          <ul class="space-y-3">
            <DetailsTravelListStyle detail={detail}/>
          </ul>
        ))
      }
    </ul>
</section>