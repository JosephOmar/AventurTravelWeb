---
import SliderNav from "../../../components/Main/SliderNav.astro";
import Layout from "../../../layouts/Layout.astro";
import TitleTours from "../../../components/Tours/TitleTours.astro"
import MainTours from "../../../components/Tours/MainTours.astro"
import {THEME_TOURS} from "../../../components/Tours/datainfo.js"

const IMG_SLIDER = [
    '/img/Lima/Full-Days/Full-DaysSlider1.webp',
    '/img/Lima/Full-Days/Full-DaysSlider2.webp',
    '/img/Lima/Full-Days/Full-DaysSlider3.webp',
    '/img/Lima/Full-Days/Full-DaysSlider4.webp'
]
---
<Layout title="Full Days" description="Full Days">
    <SliderNav images={IMG_SLIDER} h="md:h-[50vh]"/>
    <TitleTours name="Full Days"/>
    <section class="flex min-h-[70vh] justify-center items-center px-4">
      <div class="grid grid-cols-1 gap-5 md:grid-cols-2 mb-8 justify-center items-center max-w-[920px]">
            {
              THEME_TOURS.map ((tour) =>(
                  <MainTours {...tour} />
              ))
            }  
      </div>
    </section>
</Layout>