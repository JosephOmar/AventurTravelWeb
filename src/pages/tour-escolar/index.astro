---
import SliderNav from "../../components/Main/SliderNav.astro";
import Layout from "../../layouts/Layout.astro";
import TitleTours from "../../components/Tours/TitleTours.astro"
import MainTours from "../../components/Tours/MainTours.astro"
import {ESCOLAR_TOURS} from "../../components/Tours/datainfo.js"

const IMG_SLIDER = [
    '/img/Escolar/EscolarSlider1.webp',
    '/img/Escolar/EscolarSlider2.webp',
    '/img/Escolar/EscolarSlider3.webp',
    '/img/Escolar/EscolarSlider4.webp'
]
---
<Layout title="Tours Escolares" description="Tours Escolares">
    <SliderNav images={IMG_SLIDER} h="md:h-[50vh]"/>
    <TitleTours name="Tours Escolares"/>
    <section class="flex min-h-[70vh] justify-center items-center px-4">
      <div class="grid grid-cols-1 gap-5 md:grid-cols-2 mb-8 justify-center items-center max-w-[920px]">
            {
              ESCOLAR_TOURS.map ((tour) =>(
                  <MainTours {...tour} />
              ))
            }  
      </div>
    </section>
</Layout>