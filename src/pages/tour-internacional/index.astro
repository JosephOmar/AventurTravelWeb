---
import SliderNav from "../../components/Main/SliderNav.astro";
import Layout from "../../layouts/Layout.astro";
import TitleTours from "../../components/Tours/TitleTours.astro"
import MainTours from "../../components/Tours/MainTours.astro"
import {INTERNATIONAL_TOURS} from "../../components/Tours/datainfo.js"

const IMG_SLIDER = [
    '/img/International/InternationalSlider1.webp',
    '/img/International/InternationalSlider2.webp',
    '/img/International/InternationalSlider3.webp',
    '/img/International/InternationalSlider4.webp'
]
---
<Layout title="Tours Internacionales" description="Tours Internacionales">
    <SliderNav images={IMG_SLIDER} h="md:h-[50vh]"/>
    <TitleTours name="Tours Internacionales"/>
    <section class="flex min-h-[70vh] justify-center items-center px-4">
      <div class="grid grid-cols-1 gap-5 md:grid-cols-2 mb-8 justify-center items-center max-w-[920px]">
            {
              INTERNATIONAL_TOURS.map ((tour) =>(
                  <MainTours {...tour} />
              ))
            }  
      </div>
    </section>
</Layout>